pipeline {
    agent any

    environment {
        IMAGE_BACKEND = "tyzer/backend"
        IMAGE_FRONTEND = "tyzer/frontend"
        REGISTRY_URL = "tyzer.top:5000"
        DEPLOY_SERVER = "user@tyzer.top"
        CREDENTIALS_ID = "docker-credentials"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', credentialsId: 'gitlab-ci-token', url: 'https://gitlab.com/Tom8797438/scan_ticket.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    sh """
                    docker build -t $IMAGE_BACKEND backend/
                    docker build -t $IMAGE_FRONTEND frontend/
                    docker tag $IMAGE_BACKEND $REGISTRY_URL/backend
                    docker tag $IMAGE_FRONTEND $REGISTRY_URL/frontend
                    """
                }
            }
        }

        stage('Push Images to Registry') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: CREDENTIALS_ID:'DEPLOY_TOKEN', usernameVariable: 'gitlab-ci-token', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                        docker login $REGISTRY_URL -u $DOCKER_USER -p $DOCKER_PASS
                        docker push $REGISTRY_URL/backend
                        docker push $REGISTRY_URL/frontend
                        docker logout $REGISTRY_URL
                        """
                    }
                }
            }
        }

        stage('Deploy on tyzer.top') {
            steps {
                script {
                    sh """
                    ssh -o StrictHostKeyChecking=no $DEPLOY_SERVER '
                        docker login $REGISTRY_URL -u $DOCKER_USER -p $DOCKER_PASS &&
                        cd /path/to/deployment &&
                        docker-compose pull &&
                        docker-compose up --force-recreate -d &&
                        docker logout $REGISTRY_URL &&
                        sudo systemctl restart nginx
                    '
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'üöÄ D√©ploiement r√©ussi sur https://tyzer.top !'
        }
        failure {
            echo '‚ùå √âchec du d√©ploiement, v√©rifie les logs.'
        }
    }
}
